    <script>
      $(".searchbtn").click(function(){
        let val = $(".searchinput").val();
        $.ajax({
            url: '/studentsearch',
            method: 'POST',
            data: {name: val},
            success: function(res){
                console.log(res)
                $(".list-group").html("")
                if(!res.length){
                    $(".list-group").append(`<li class="list-group-item">No Student found!</li>`);
                }
                res.forEach(i=>{
                    $(".list-group").append(`<a href="/studentviewer/${i.studentID}" class="list-group-item">${i.firstname} ${i.surname}</a>`);
                })
            }
        })
      })
